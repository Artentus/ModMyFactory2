<Window x:Class="ModMyFactoryGUI.Views.ModUpdateWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:ModMyFactoryGUI.Localization"
        Icon="/Assets/MMF_Icon.ico"
        Title="{l:LocalizedResource ModUpdateWindowTitle}"
        Width="450" Height="600">

    <Window.Resources>
        <l:LocalizedFormatter x:Key="LocalizedFormatter" />
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button Margin="4" Grid.Row="2" Grid.Column="0" IsCancel="True" Content="{l:LocalizedResource CancelButton}" Command="{Binding CancelCommand}" />
        <Button Margin="4" Grid.Row="2" Grid.Column="2" IsDefault="True" Content="{l:LocalizedResource ModUpdateButton}" Command="{Binding UpdateCommand}" />
    </Grid>
</Window>
