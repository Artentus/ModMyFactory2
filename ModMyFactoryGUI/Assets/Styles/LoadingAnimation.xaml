<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ModMyFactoryGUI.Controls">

  <Style Selector="controls|LoadingAnimation">
    <Setter Property="Template">
      <ControlTemplate TargetType="{x:Type controls:LoadingAnimation}">
        <Canvas x:Name="PART_DotCanvas" UseLayoutRounding="False">
          <Canvas.Styles>
            <Style Selector="Ellipse">
              <Setter Property="Fill" Value="{DynamicResource ThemeBorderMidBrush}" />
            </Style>
          </Canvas.Styles>
        </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>

</Styles>
