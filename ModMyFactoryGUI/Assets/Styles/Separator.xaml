<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ModMyFactoryGUI.Controls">

  <Style Selector="Menu Separator">
    <Setter Property="Height" Value="3" />
    <Setter Property="Template">
      <ControlTemplate>
        <Rectangle Fill="{DynamicResource ThemeBorderLowBrush}" Margin="2,1" Height="1" />
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="controls|Toolbar Separator">
    <Setter Property="Width" Value="9" />
    <Setter Property="Template">
      <ControlTemplate>
        <Rectangle Fill="{DynamicResource ThemeBorderMidBrush}" Margin="4,2" Width="1" />
      </ControlTemplate>
    </Setter>
  </Style>

</Styles>
